<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_worker_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="activity.WorkerMagActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_worker_manage_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="工人工作管理" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_worker_mag_all"
            style="@style/rl_manage">

            <TextView
                android:id="@+id/tv_worker_mag_all"
                style="@style/tv_manage"
                android:text="全部"
                android:textColor="@color/red_ff3e50" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_worker_mag_contacting"
            style="@style/rl_manage">

            <TextView
                android:id="@+id/tv_worker_mag_contacting"
                style="@style/tv_manage"
                android:text="洽谈中" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_worker_mag_under_way"
            style="@style/rl_manage">

            <TextView
                android:id="@+id/tv_worker_mag_under_way"
                style="@style/tv_manage"
                android:text="进行中" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_worker_mag_finished"
            style="@style/rl_manage">

            <TextView
                android:id="@+id/tv_worker_mag_finished"
                style="@style/tv_manage"
                android:text="已结束" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_worker_mag_sit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
