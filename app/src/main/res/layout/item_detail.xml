<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginTop="@dimen/y6"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y10" />

        <TextView
            android:id="@+id/tv_item_detail_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_detail_title"
            android:layout_marginBottom="@dimen/y6"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginTop="@dimen/y6"
            android:textColor="@color/gray_c4ced3"
            android:textSize="@dimen/y8" />

        <TextView
            android:id="@+id/tv_item_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/y19"
            android:layout_marginTop="@dimen/y6"
            android:textColor="@color/gray_c4ced3"
            android:textSize="@dimen/y8" />

        <TextView
            android:id="@+id/tv_item_detail_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_item_detail_time"
            android:layout_marginRight="@dimen/y19"
            android:layout_marginTop="@dimen/y6"
            android:textColor="@color/red_ff3e50"
            android:textSize="@dimen/y10" />

    </RelativeLayout>

    <View style="@style/v_split" />

</LinearLayout>