<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_c4ced3"
    android:orientation="vertical"
    tools:context="taskscreen.view.TaskScreenActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_screen_job_return"
            style="@style/rl_return">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/close" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_screen_job_search"
            style="@style/rl_return"
            android:layout_alignParentRight="true">

            <ImageView
                style="@style/iv_return"
                android:src="@mipmap/search" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_task_screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/sl_me_login"
            android:hint="搜索职位"
            android:padding="@dimen/y7"
            android:singleLine="true"
            android:textColorHint="@color/gray_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择工期："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_job_scn_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y5"
                android:singleLine="true"
                android:text="请选择工期"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工资金额："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_job_scn_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y5"
                android:singleLine="true"
                android:text="请选择工资金额"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目时间："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_job_scn_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y5"
                android:singleLine="true"
                android:text="请选择项目时间"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择工种："
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_job_scn_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y5"
                android:singleLine="true"
                android:text="请选择工种"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
