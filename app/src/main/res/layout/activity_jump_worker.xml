<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jump_worker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext=".activity.JumpWorkerActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_jump_worker_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_jump_worker_top_title"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/rl_jump_worker_complain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/sl_press">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/y5"
                android:layout_marginRight="@dimen/y5"
                android:text="投诉"
                android:textColor="@color/blue_2681fc"
                android:textSize="@dimen/y10" />

        </RelativeLayout>

    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_jump_worker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/y10">

            <com.gjzg.view.CImageView
                android:id="@+id/iv_jump_worker_icon"
                android:layout_width="@dimen/y35"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/person_face_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/y5"
                android:layout_marginRight="@dimen/y5"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jump_worker_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black_252323"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:id="@+id/iv_jump_worker_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/y5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_jump_worker_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y8"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_jump_worker_status"
                    android:layout_width="@dimen/y20"
                    android:layout_height="@dimen/y10"
                    android:layout_marginTop="@dimen/y2"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <com.gjzg.view.CImageView
                android:id="@+id/iv_jump_worker_phone"
                android:layout_width="@dimen/y30"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phone_dail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/y10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/point_red" />

                <TextView
                    android:id="@+id/tv_jump_worker_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/point_blue" />

                <TextView
                    android:id="@+id/tv_jump_worker_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/v_split" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_jump_talk_sure_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/y5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_marginRight="@dimen/y5"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="不合适的话可以取消该工人取消后，您将无法与Ta联系"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_jump_worker_cancel_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_login_get"
                    android:padding="@dimen/y5"
                    android:text="取消工人"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

            <View style="@style/v_split" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/y5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_marginRight="@dimen/y5"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="请确认工人到岗并确认工期和工资，然后再确认开工"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_jump_worker_sure_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_login_get"
                    android:padding="@dimen/y5"
                    android:text="确认工资"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jump_talk_wait_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/y5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_marginRight="@dimen/y5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="不合适的话可以取消该工人取消后，您将无法与Ta联系"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_jump_worker_cancel_worker_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_login_get"
                    android:padding="@dimen/y5"
                    android:text="取消工人"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/y5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_marginRight="@dimen/y5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="请确认工人到岗并确认工期和工资，然后再确认开工"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_login_get"
                    android:padding="@dimen/y5"
                    android:text="等待工人确认"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jump_talk_fire_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/y5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_marginRight="@dimen/y5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="解雇工人后，系统将按已完成的工时计算工人工资并支付给工人"
                    android:textSize="@dimen/y10" />

                <TextView
                    android:id="@+id/tv_jump_worker_fire_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_login_get"
                    android:padding="@dimen/y5"
                    android:text="解雇工人"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/y10" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
