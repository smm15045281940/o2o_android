<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_screen_history"
        android:orientation="horizontal"
        android:padding="@dimen/y5">

        <TextView
            android:id="@+id/tv_item_screen_history_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/tv_item_screen_history_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/tv_item_screen_history_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_item_screen_history_del"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/close" />

    </LinearLayout>

</RelativeLayout>