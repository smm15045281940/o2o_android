<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y10"
            android:text="请仔细阅读以下文字"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:text="请在工作开始之前，与工人确认好工期及工资，确认工人到岗后，点击开工按钮，待工人确认工资与工期无误后，工人点击开始工作，即算开工并开始计算工期。"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

        <TextView
            android:id="@+id/tv_pop_employer_sure_attention_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

        <TextView
            android:id="@+id/tv_pop_employer_sure_attention_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:text="*注：工期为一天的工作，无法解雇和辞职；
        每日结算时间点为00：00。"
            android:textColor="@color/red_ff3e50"
            android:textSize="@dimen/y8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:text="如要修改工资和工期可在页面下方点击修改工资，与工人确认完毕后，再开工。"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y8" />

    </LinearLayout>

    <View style="@style/v_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="您给该工人的工资"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_employer_sure_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y9"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="元/人/天,工期"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y9"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pop_employer_sure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y9"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pop_employer_sure_service_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:textColor="@color/red_ff3e50"
            android:textSize="@dimen/y8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:text="确认工人到岗并开工，是否确认开工？"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/y10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/y5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_sure_price_no"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="先不开工"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_sure_price_change"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginRight="@dimen/y10"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="修改工资"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/tv_pop_sure_price_yes"
                android:layout_width="@dimen/y50"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_me_login"
                android:gravity="center"
                android:padding="@dimen/y5"
                android:text="雇主确认"
                android:textColor="@color/black_252323"
                android:textSize="@dimen/y10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>