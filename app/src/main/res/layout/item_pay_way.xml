<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_pay_way_icon"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/y24"
            android:layout_marginTop="@dimen/y5"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_pay_way_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y15"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y12" />

        <ImageView
            android:id="@+id/iv_item_pay_way_check"
            android:layout_width="@dimen/y15"
            android:layout_height="@dimen/y15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/y24"
            android:scaleType="fitXY" />

    </LinearLayout>

</LinearLayout>