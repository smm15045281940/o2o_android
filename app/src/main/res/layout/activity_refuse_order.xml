<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_refuse_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    tools:context="refuseorder.view.RefuseOrderActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_refuse_order_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="填写原因" />

    </RelativeLayout>

    <View style="@style/v_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/y35"
            android:layout_height="@dimen/y35"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/y10"
            android:scaleType="fitXY"
            android:src="@mipmap/person_face_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王二妮"
                    android:textColor="@color/black_252323"
                    android:textSize="@dimen/y10" />

                <ImageView
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/female" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:text="老板"
                android:textColor="@color/gray_a0a0a0"
                android:textSize="@dimen/y8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:text="好评10次"
                android:textColor="@color/red_ff3e50"
                android:textSize="@dimen/y9" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/y10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="原因："
            android:textColor="@color/black_252323"
            android:textSize="@dimen/y11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/y5">

            <ImageView
                android:id="@+id/iv_refuse_order_click_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/click_choose" />

            <RelativeLayout
                android:id="@+id/rl_refuse_order_choose_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_refuse_order_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_a0a0a0" />

                <ImageView
                    android:id="@+id/iv_refuse_order_choose_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/choose_again" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_refuse_order_des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/y10"
        android:layout_marginRight="@dimen/y10"
        android:background="@drawable/sl_me_login"
        android:gravity="start"
        android:hint="请详细描述您的问题"
        android:padding="@dimen/y5"
        android:textColorHint="@color/gray_a0a0a0"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/y9" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_refuse_order_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/y10"
        android:layout_marginRight="@dimen/y10"
        android:background="@drawable/sp_login_get"
        android:gravity="center"
        android:paddingBottom="@dimen/y5"
        android:paddingTop="@dimen/y5"
        android:text="提交原因"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/y11" />

</LinearLayout>
